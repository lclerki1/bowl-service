<h1>Compare Averages</h1>

<%= form_for(@game_set) do |f| %>
<p>Select a timeframe to compare:</p>
  <p>Week will compare over one week (Monday-Saturday)</p>
  <p>Season will compare over the selected season</p>
  <%= f.select :timeframe, options_for_select([ "Week", "Season" ], selected: "Week") %>
<% end %> 

<p>This: <span id="this"></span></p>
<%= render 'season' if @timeframe == "Season"%>

<table border='1'>
	<tr>
		<th>Bowler ID#</th>
		<th>Bowler Name</th>
		<th>Average</th>
	</tr>
	
	<% @sorted.each do |person| %>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= person["id"] %></td>
      <td><%= person["first_name"] %> <%= person["last_name"] %></td>
      <td><%= person["avg"] %></td>
	</tr>
	<% end %>
</table>

</div>

<script type="text/javascript"> 
  $("form").on("keyup", function() {
  	var time = document.getElementById("timeframe").value
	document.getElementById("this").innerHTML = time;
  });
</script>